/* Animated Background CSS */
@keyframes floatAnimation {
    0% {
        transform: translateY(0) translateX(0) scale(1);
    }
    50% {
        transform: translateY(-20px) translateX(20px) scale(1.1);
    }
    100% {
        transform: translateY(0) translateX(0) scale(1);
    }
}

.animated-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    overflow: hidden;
    background: linear-gradient(110deg,#ffb703, var(--first-color), var(--second-color), var(--third-color),#ffb703);
    background-size: 300% 300%;
    animation: backgroundAnimation 10s ease infinite;
}

@keyframes backgroundAnimation {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
}

.floating-bubble {
    position: absolute;
    border-radius: 50%;
    opacity: 0.4;
    background: var(--color-white);
    animation: floatAnimation 6s ease-in-out infinite;
}

.floating-bubble:nth-child(1) {
    width: 150px;
    height: 150px;
    top: 10%;
    left: 15%;
    animation-duration: 8s;
}

.floating-bubble:nth-child(2) {
    width: 200px;
    height: 200px;
    top: 40%;
    left: 30%;
    animation-duration: 10s;
}

.floating-bubble:nth-child(3) {
    width: 100px;
    height: 100px;
    top: 70%;
    left: 60%;
    animation-duration: 7s;
}
.floating-bubble:nth-child(4) {
    width: 90px;
    height: 90px;
    top: 60%;
    left: 13%;
    animation-duration: 9s;
}
.floating-bubble:nth-child(5) {
    width: 110px;
    height: 110px;
    top: 90%;
    left: 19%;
    animation-duration: 6s;
}
.floating-bubble:nth-child(6) {
    width: 130px;
    height: 130px;
    top: 79%;
    left: 39%;
    animation-duration: 13s;
}


